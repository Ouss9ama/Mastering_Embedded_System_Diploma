#include <stdio.h>
void bittodec(int n);
int bit[20];
int i;
int n;
int main()
{
	printf(" Enter the number:\n");
	scanf("%d",&n);
	bittodec(n);
	printf("the 4th least significant number is:", bit[i-3]);
}

void bittodec(int n)

{
	for(i=0; n>0; i++)
	{
		int bit[20]= n % 2;
		n=n/2;
	}
}
